@page "/movies/edit/{Id:int}"
@using Components.Client.Pages.Componentes

<FormMovie Movie="Movie" OnValidSubmit="Edit"></FormMovie>
@code {
    [Parameter] public int Id { get; set; }
    private Movie Movie;
    protected override void OnInitialized()
    {
        Movie = new Movie()
        {
            Title = "Maligno",
            InTheaters = true,
            Description = "Madison está paralizada por causa de visiones impactantes de asesinatos espeluznantes. Su tormento empeora cuando descubre que estos sueños de vigilia son, de hecho, realidades aterradoras.",
            MovieImage = "/images/maligno.png", 
            ReleaseDate = new DateTime(2021, 09, 03)
        };
    }
    void Edit()
    {
        Console.WriteLine($"Pelicula: {Movie.Title}");
        Console.WriteLine($"Premier: {Movie.ReleaseDate}");
        Console.WriteLine($"Esta en cartelera: {Movie.InTheaters}");
        Console.WriteLine($"Poster: {Movie.MovieImage}");
        Console.WriteLine($"Sinopsis: {Movie.Description}");
    }
}